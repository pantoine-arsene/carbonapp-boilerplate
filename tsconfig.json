{
  "compilerOptions": {
    "target": "ES6",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "CommonJS",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "sourceMap": true,
    "outDir": "build",
    "baseUrl": "src",
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
